Algoritmo areaCilindro
	Definir radio,altura, area, p, volumen como real;
	Escribir "Ingrese el valor de la altura";
	Leer altura;
	Escribir "Ingrese el valor de radio";
	Leer radio;
	p= 3.1416;
	area = 2 * p * radio * altura;
	volumen= p * radio * radio * altura;
	Escribir "El area del cilindro es: ",area;
	Escribir "El volumen del cilindro es: ",volumen;
FinAlgoritmo
